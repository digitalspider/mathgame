<!DOCTYPE html>
<html>
<head>
	<title>MathGame</title>
	<link rel="stylesheet" href="/css/bootstrap-4.3.1.min.css" />
	<link rel="stylesheet" href="/css/style.css" />
</head>
<body>
	<div class="container">
      <div class="header clearfix">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <a class="navbar-brand" href="/">Math Game</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              {{#if user}}
                <li class="nav-item"><div class="nav-link" data-toggle="modal" data-target="#settingsModal">Settings</div></li>
                <li class="nav-item"><a class="nav-link" href="/logout" onclick="javascript:logout()">Logout {{user.username}}</a></li>
              {{else}}
                <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                <li class="nav-item"><a class="nav-link" href="/register">Register</a></li>
              {{/if}}
            </ul>
        </nav>
      </div>

      <div class="row">
        <div class="col-lg-12">
          {{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          
          {{{body}}}
        </div>

        
      </div>

      <!-- Settings Modal -->
      <div class="modal" tabindex="-1" role="dialog" id="settingsModal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Settings</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <form id='settingsForm' method="POST" action="/api/settings">
                <table class="table table-striped">
                  <tr>
                    <td>Difficulty</td>
                    <td>
                      <ul class="nav nav-pills nav-fill nav-justified">
                      {{#each settingOptions.difficulty}}
                        <li class="nav-item">
                          <a id="{{this}}" class="nav-link {{#ifEquals this 'user.settings.difficulty' 'active'}}{{/ifEquals}}" data-toggle="pill" href="#{{this}}">{{this}}</a>
                        </li>
                      {{/each}}
                      </ul>
                      <input id="difficulty" type="hidden" name="difficulty" value="{{user.settings.difficulty}}"/>
                    </td>
                  </tr>
                  <tr>
                    <td>Operations</td>
                    <td>
                      <select class="custom-select" name="operations" multiple="true">
                      {{#each settingOptions.operations}}
                          <option value="{{this}}" {{#ifIncludes this 'user.settings.operations' 'selected'}}{{/ifIncludes}}>{{this}}</option>
                      {{/each}}
                      </select>
                    </td>
                  </tr>
                  <tr>
                    <td>Questions</td>
                    <td><input type="text" value="{{user.settings.questionCount}}" name="questionCount" id="questionCount"></input></td>
                  </tr>
                  <tr>
                    <td>Max Value</td>
                    <td><input type="text" value="{{user.settings.maxValue}}" name="maxValue" id="maxValue"></input></td>
                  </tr>
                </table>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary" onclick="javascript:submitSettingsForm()">Save Settings</button>
            </div>
          </div>
        </div>
      </div>

      <!-- footer -->
      <footer class="footer">
        <p>&copy; 2019 MathGame, Inc.</p>
      </footer>

    </div> <!-- /container -->
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/js/bootstrap-4.3.1.min.js"></script>
    {{#if user}}
    <script src="/js/mathgame.js"></script>
    {{/if}}
</body>
</html>
