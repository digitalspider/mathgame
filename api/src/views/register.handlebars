<h2 class="page-header">Register</h2>
{{#if user}}
        <div class="alert alert-danger">Username has taken already try new</div> 
{{/if}}
{{#if mail}}
        <div class="alert alert-danger">Email has taken already try new</div> 
{{/if}} 
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/register">
  <div class="form-group">
    <div class="input-group input-group-lg" id="username-input">
      <div class="input-group-prepend" id="username-label">
        <span class="input-group-text" id="username-label-text">Username</span>
      </div>
      <input type="text" class="form-control" aria-label="Username" placeholder="Username" name="username">
    </div>
  </div>
  <div class="form-group">
    <div class="input-group input-group-lg" id="email-input">
      <div class="input-group-prepend" id="email-label">
        <span class="input-group-text" id="email-label-text">&nbsp;&nbsp;Email&nbsp;&nbsp;</span>
      </div>
      <input type="email" class="form-control" aria-label="Email" placeholder="Email" name="email">
    </div>
  </div>
  <div class="form-group">
    <div class="input-group input-group-lg"  id="password-input">
      <div class="input-group-prepend" id="password-label">
        <span class="input-group-text" id="password-label-text">Password</span>
      </div>
      <input type="password" class="form-control" aria-label="Password" placeholder="Password" name="password">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>