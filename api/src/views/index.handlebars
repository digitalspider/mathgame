{{#if game}}
  {{#if game.startTime}}
  <div type='button' class='btn btn-danger' onclick="javascript:stopGame({{game.id}})">Stop Game</div>
  <div id="gameCarousel" class="carousel" data-ride="carousel">
    <ol class="carousel-indicators">
      {{#each game.questions}}
        <li data-target="#gameCarousel" data-slide-to="{{@index}}" {{#if @first}}class="active"{{/if}}></li>
      {{/each}}
    </ol>
    <div class="carousel-inner">
      {{#each game.questions}}
      <div class="carousel-item {{#if @first}}active{{/if}}">
        <div class="d-block w-100 h-100" style="background-color: lightgrey; font-size: 200px; text-align: center">
          {{this.firstNumber}}{{this.operation}}{{this.secondNumber}}=
          <input type="text" style="width: 40px; font-size: 150px"></input>
        </div>
      </div>
      {{/each}}
    </div>
    <a class="carousel-control-prev" href="#gameCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#gameCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  {{else}}
  <div type='button' class='btn btn-success' onclick="javascript:startGame({{game.id}})">Start Game</div>
  {{/if}}
{{else}}
  <p>Welcome player: <b>{{user.username}}</b></p>
  <p>Click the below to start a new game</p>
  <div type='button' class='btn btn-warning' onclick="javascript:createGame()">Create Game</div>
  {{#if completedGames}}
  <h3>Completed Games</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Score</th>
        <th scope="col">Duration</th>
      </th>
    </thead>
    <tbody>
      {{#each completedGames}}
      <tr>
        <td scope="row">{{this.id}}</td>
        <td scope="row">{{this.score}}</td>
        <td scope="row">{{this.durationInMs}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{/if}}
{{/if}}
